@model Library.Domain.Models.User

@{
    ViewData["Title"] = "Insert User";
}

<h1>افزودن کاربر جدید</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" id="Role1" type="radio" asp-for="Role" value="admin">
                <label class="form-check-label" for="Role1">
                    ادمین
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" id="Role2" type="radio" asp-for="Role" value="user">
                <label class="form-check-label" for="Role2">
                    کاربر عادی
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-success px-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">لیست کاربران</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
