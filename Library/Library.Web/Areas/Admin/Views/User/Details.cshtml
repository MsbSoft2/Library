@model Library.Domain.Models.User
@using Library.Domain.Convertor
@{
    ViewData["Title"] = "Details";
}

<h1>مشاهده</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Role == "admin")
            {
                <span class="badge badge-warning rounded-pill p-2">ادمین</span>
            }
            else
            {
                <span class="badge badge-info rounded-pill p-2">کاربر عادی</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd class="col-sm-10">
            @Model.RegisterDate.ToShamsi()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-warning btn px-5">ویرایش</a> |
    <a asp-action="Index" class="btn btn-default">برگشت</a>

</div>
