@model Library.Domain.Models.User

@{
    ViewData["Title"] = "ویرایش کاربر";
}

<h1>ویرایش کاربر</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label" for="Role1">
                    ادمین
                </label>
                <input class="form-check-input" id="Role1" type="radio" asp-for="Role" value="admin">
            </div>
            <div class="form-check">
                <label class="form-check-label" for="Role2">
                    کاربر عادی
                </label>
                <input class="form-check-input" id="Role2" type="radio" asp-for="Role" value="user">
            </div>
            <input type="hidden" asp-for="RegisterDate" />
            <div class="form-group">
                <input type="submit" value="ویرایش کاربر" class="btn btn-warning px-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">برگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
