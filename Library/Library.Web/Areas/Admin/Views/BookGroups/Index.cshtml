@model IEnumerable<Library.Domain.Models.BookGroup>

@{
    ViewData["Title"] = "لیست گروه صفحات";
}

<h2>لیست گروه کتاب ها</h2>

<p>
    <a asp-action="Create" class="btn btn-success px-5">افزودن گروه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupTitle)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GroupID" class="btn btn-sm btn-warning">ویرایش</a>
                    <a asp-action="Details" asp-route-id="@item.GroupID" class="btn btn-sm btn-info">مشاهده</a>
                    <a asp-action="Delete" asp-route-id="@item.GroupID" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
