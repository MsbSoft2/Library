@model IEnumerable<Library.Domain.Models.Book>
@using Library.Domain.Convertor
@{
    ViewData["Title"] = "جستجو";
}

<div class="col-md-8 col-sm-12 col-xs-12 pull-left">
    <!-- last news -->
    <section class="last-news-section border-radius">
        <header><i class="icons icon-doc-2"></i>  <h3> نتیجه های یافت شده</h3> </header>
        <ul>
            @{
                foreach (var item in Model)
                {
                    <li>
                        <img class="border-radius" src="~/contents/BookImages/@item.ImageName">
                        <h2> <a href=""> @item.BookName </a></h2>
                        <p>@item.ShortDescription</p>
                        <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.PublishYear.ToShamsi() </span>
                        <a href="" class="more-link"><i class="icons icon-more"></i></a>
                    </li>
                }
            }
        </ul>
    </section>
